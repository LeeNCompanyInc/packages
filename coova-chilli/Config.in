	bool "Enable support for per session DNS enforcement"
	default n

config COOVACHILLI_CHILLIXML
	bool "Enable use of chillixml"
	default n

config COOVACHILLI_PROXYVSA
	bool "Enable support for VSA attribute proxy"
	default n

config COOVACHILLI_DNSLOG
	bool "Enable support to log DNS name queries"
	default n

config COOVACHILLI_IPWHITELIST
	bool "Enable file based IP white list"
	default n

config COOVACHILLI_UAMDOMAINFILE
	bool "Enable loading of mass uamdomains from file"
	default n

config COOVACHILLI_REDIRDNSREQ
	bool "Enable the sending of a DNS query on redirect"
	default n

config COOVACHILLI_IEEE8021Q
	bool "Enable support for IEEE 802.1Q"
	default y

config COOVACHILLI_LARGELIMITS
	bool "Enable larger limits for use with non-embedded systems"
	default n

choice
	prompt "SSL library"
	default COOVACHILLI_NOSSL

config COOVACHILLI_NOSSL
	bool "No SSL support"

config COOVACHILLI_MATRIXSSL
	bool "MatrixSSL"

config COOVACHILLI_MATRIXSSL_CLI
	depends on COOVACHILLI_MATRIXSSL
	bool "Enable MatrixSSL Client use"
	default n

config COOVACHILLI_CYASSL
	bool "CyaSSL"

config COOVACHILLI_OPENSSL
	bool "OpenSSL"

endchoice

config COOVACHILLI_CLUSTER
	depends on COOVACHILLI_OPENSSL
	bool "Enable support for clustering"
	default n

config COOVACHILLI_NFQUEUE
	bool "Enable support for netfilter_queue"
	default n

choice
	prompt "Hashing method"
	default COOVACHILLI_SFHASH

config COOVACHILLI_SFHASH
	bool "SuperFashHash"

config COOVACHILLI_LOOKUP3
	bool "Jenkins lookup3"

endchoice

config COOVACHILLI_PATRICIA
	bool "Enable Patricia use"
	default n

config COOVACHILLI_IPV6
	bool "Enable IPV6"
	default y

config COOVACHILLI_PCAP
	bool "Enable support for pcap"
	default n

config COOVACHILLI_MMAP
	bool "Enable support for mmap"
	default n

config COOVACHILLI_POLL
	bool "Enable support for poll"
	default n

