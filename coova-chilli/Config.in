# CoovaChilli advanced configuration

menu "Configuration"
	depends on PACKAGE_coova-chilli

config COOVACHILLI_CHILLIQUERY
	bool "Enable chilli_query"
	default y

config COOVACHILLI_UAMANYIP
	bool "Enable use of uamanyip"
	default y

config COOVACHILLI_UAMUIPORT
	bool "Enable use of uamuiport"
	default y

config COOVACHILLI_ACCOUNTING_ONOFF
	bool "Enable use of Accounting-On and Accounting-Off"
	default y

config COOVACHILLI_TAP
	bool "Enable support for tap interface (tun only)"
	default y

config COOVACHILLI_TCPRESET
	bool "Enable support for TCP reset of filtered connections"
	default y

config COOVACHILLI_RADPROXY
	bool "Enable support RADIUS (EAP) Proxy"
	default y

config COOVACHILLI_DHCPRADIUS
	bool "Enable support DHCP/RADIUS integration"
	default y

config COOVACHILLI_WPAD
	bool "Enable support WPAD"
	default n

config COOVACHILLI_LEAKYBUCKET
	bool "Enable use of leaky bucket shaping"
	default y

config COOVACHILLI_AUTHEDALLOWED
	bool "Enable Authorized Garden"
	default n

config COOVACHILLI_GARDENEXT
	bool "Enable extended walled garden features"
	default n

config COOVACHILLI_INSPECT
	bool "Enable inspect feature in cmdsock"
	default n

config COOVACHILLI_COA
	bool "Enable CoA RADIUS support"
	default y

