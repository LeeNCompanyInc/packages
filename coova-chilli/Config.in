	bool "Enable support for curl"
	default n

config COOVACHILLI_MULTIROUTE
	bool "Enable support for multiple routes"
	default n

config COOVACHILLI_MULTILAN
	bool "Enable support for multiple LANs"
	default n

config COOVACHILLI_CHILLIRADSEC
	depends on (COOVACHILLI_OPENSSL || COOVACHILLI_CYASSL || COOVACHILLI_MATRIXSSL)
